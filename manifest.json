{
    
      "manifest_version": 2,
      "name": "AnonSays",
      "version": "1.0",
    
      "description": "Manages a custom front page for reddit.com without needing to log in",
    
      "icons": {
        "48": "icons/anonsays-48.png"
      },

      "permissions": [
        "activeTab",
        "tabs",
        "storage"
      ],

      "browser_action": {
        "default_icon": "icons/anonsays-48.png",
        "default_title": "AnonSays",
        "default_popup": "popup/popup.html",
        "browser_style": false
      },
    
      "content_scripts": [
        {
          "matches": ["*://*.reddit.com/*"],
          "js": ["anonsays.js"]
        }
      ],

      "background": {
        "scripts": ["background.js"]
      }
    
    }